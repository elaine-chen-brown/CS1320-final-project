<!--Header-->
<div class="header">
    <div class="banner">
        <div class="title-wrapper">
            <img src="/images/logo.png" alt="The Brown Noser logo" class="logo-image">
            <div class="title-text">THE BROWN NOSER</div>
        </div>
        <div class="extras-wrapper">
            <div class="extras-options">
                <a href="#" class="extras-text">About</a>
                <a href="#" class="extras-text">Archive</a>
                <a href="#" class="extras-text">Join Us</a>
            </div>
            <div class="search">
                <form>
                    <input type="text" placeholder="Search..." name="search" class="search-input search-light-grey">
                </form>
            </div>
            <div class="email">
                <form class="email-form">
                    <input type="text" placeholder="Email address" name="email" class="email-input search-light-grey">
                    <button type="submit" class="subscribe-button">Subscribe</button>
                </form>
            </div>
        </div>
    </div>
    <hr>
    <div class="navbar">
        <ul class="navlist">
            <li class="navitem"><a href="#" class="hover">BUSINESS</a></li>
            <li class="navitem"><a href="#" class="hover">CAMPUS LIFE</a></li>
            <li class="navitem"><a href="#" class="hover">CINEMA CORNER</a></li>
            <li class="navitem"><a href="#" class="hover">NEWS IN PICTURES</a></li>
            <li class="navitem"><a href="#" class="hover">POLITICS</a></li>
            <li class="navitem"><a href="#" class="hover">SCIENCE &amp TECHNOLOGY</a></li>
            <li class="navitem"><a href="#" class="hover">SPORTS</a></li>
        </ul>
    </div>
    <hr>
</div>

<div class="one-col-page-wrapper">
     <!--Breadcrumbs-->
    <div class="breadcrumbs-wrapper brown bread-margin">
        Previous / <span class="underline">About Us</span>
    </div>
    <!--Sub-banner-->
    <div class="sub-banner brown">
        ABOUT US
    </div>
    <hr>
    <!--Banner Image-->
    <div class="splash-wrapper about-image">
        <div class="about-text">{{ aboutBlurb }}</div>
    </div>
    <!--Bottom Content Section-->
    <div class="bottom-wrapper">
        <div class="bottom-title">STAFF</div>
        <hr>
        <div class="staff-cols-wrapper">
            {{#staffMembers}}
            <!--One Staff Member-->
            <div class="staff-member-wrapper">
                <div class="staff-image-wrapper"><img src={{ staffPhoto }} class="staff-image"></div>
                <div class="staff-text-wrapper">
                    <div class="staff-name">{{ staffName }}</div>
                    <div class="staff-role">{{ staffRole }}</div>
                    <div>{{ staffBlurb }} </div>
                </div>
            </div>
            <!---->
            {{/staffMembers}}
        </div>
    </div>
</div>

<!--Footer-->
<div class="footer">
    <div class="footer-text">Â© The Brown Noser</div>
</div>