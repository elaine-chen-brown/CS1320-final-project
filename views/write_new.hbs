<head>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js" integrity="sha256-+C0A5Ilqmu4QcSPxrlGpaZxJ04VjsRjKu+G82kl5UJk=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css" integrity="sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=" crossorigin="anonymous" />
    <script>
      tinymce.init({
        selector: '#content'
      });
      $(document).ready(function () {
        $('select').selectize({
            sortField: 'text'
        });
      });
    </script>
</head>

<body>
    <div class="navigation" role="navigation">
        <ul class="navlist">
            <li class="navitem"><a href="#">New article</a></li>
            <li class="navitem"><a href="#">Edit article</a></li>
            <li class="navitem"><a href="/publish">Pubish article(s)</a></li>
            <li class="navitem"><a href="#">Delete article</a></li>
        </ul>
    </div>

    <div class="main" role="main">
        <form role="form" method="post">
            <label for="headline">Headline: </label>
            <input type="text" id="headline" name="headline"> <br/>

            <label for="author">Author name: </label>
            {{!-- <input type="text" id="author" name="author"><br/> --}}

            <select id="author" name="author" placeholder>
                <option value="">Select a name...</option>
                {{#authors}}
                <option value='{{authorid}},{{authorname}}'>{{authorname}}</option>
                {{/authors}}
            </select> <br/> 

            <label for="category">Category: </label>
            <select name="category" id="category">
                <option value="">Select a category...</option>
                {{#categories}}
                <option value='{{categoryid}},{{category}}'>{{category}}</option>
                {{/categories}}
            </select> <br/>

            <label for="teaser">Article teaser: </label>
            <input type="text" id="teaser" name="teaser"> <br/>

            {{!-- Need to add photo upload and caption --}}

            <label for="content">Article body: </label><br/>
            <textarea id="content" name="content"></textarea> <br/>

            <input type="submit" value="Save">
        </form>
    </div>

    <div class="result">
        {{ message }}
    </div>
</body>

<style>
    body {
        display: flex;
        flex-direction: row;
    }

    .navigation {
        display: flex;
        flex-direction: column;
        background-color: cornflowerblue;
        width: 30vw;
        height: 100vh;
        color: white;
        position: relative;
        top: -10px;
        left: -10px;
    }

    .navlist {
        display: flex;
        flex-direction: column;
        background-color: cornflowerblue;
        color: white; 
    }

    li {
        list-style-type: none;
        margin-bottom: 20px;
    }
    a {
        text-decoration: none;
        color: white;
    }

    input {
        margin-bottom: 15px;
    }
</style>