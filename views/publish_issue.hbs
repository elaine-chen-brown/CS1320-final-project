<body>
    <div class="navigation" role="navigation">
        <ul class="navlist">
            <li class="navitem"><a href="/write_new">New article</a></li>
            <li class="navitem"><a href="#">Edit article</a></li>
            <li class="navitem"><a href="#">Pubish new issue</a></li>
            <li class="navitem"><a href="/publish_topical">Publish topical article</a></li>
            <li class="navitem"><a href="#">Delete article</a></li>
        </ul>
    </div>

    <div class="main" role="main">
        <form method="post" action="">
            <h2>Select featured article</h2>
            {{#articles}}
                <input type="radio" id="featured" name="featured" value="{{articleid}}">
                <label for="{{articleid}}">{{headline}}</label> <br>
                <label for="{{articleid}}">{{author}}</label> <br> <br>
            {{/articles}}
            {{#if canPublish}}
                    <input type="submit" value="Publish">
            {{/if}}
        </form>

        <div class="result">
            {{ message }}
        </div>
    </div>
</body>


